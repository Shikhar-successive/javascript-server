{
  "parser": "babel-eslint",
  "env": {
      "browser": true,
      "node": true,
      "jest": true
  },
  "extends": [
    "airbnb"
  ],
  "rules": {
    "indent": [2, 2],
    "react/jsx-indent": ["error", 2],
    "import/prefer-default-export": "off",
    "react/prefer-stateless-function": "off",
    "jsx-a11y/label-has-associated-control": [ "error", {
      "required": {
        "some": [ "nesting", "id"  ]
      }
    }],
    "jsx-a11y/label-has-for": [ "error", {
      "required": {
        "some": [ "nesting", "id"  ]
      }
    }]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "classes": true
    }
  }
}
